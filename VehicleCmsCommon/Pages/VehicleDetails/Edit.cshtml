@page
@model VehicleCmsCommon.Pages.VehicleDetails.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VehicleDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleDetail.ID" />
            <div class="form-group">
                <label asp-for="VehicleDetail.VehicleID" class="control-label"></label>
                <select asp-for="VehicleDetail.VehicleID" class="form-control" asp-items="ViewBag.VehicleID"></select>
                <span asp-validation-for="VehicleDetail.VehicleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleDetail.MaxSpeed" class="control-label"></label>
                <input asp-for="VehicleDetail.MaxSpeed" class="form-control" />
                <span asp-validation-for="VehicleDetail.MaxSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleDetail.Doors" class="control-label"></label>
                <input asp-for="VehicleDetail.Doors" class="form-control" />
                <span asp-validation-for="VehicleDetail.Doors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleDetail.Wheels" class="control-label"></label>
                <input asp-for="VehicleDetail.Wheels" class="form-control" />
                <span asp-validation-for="VehicleDetail.Wheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
