@page "{id:int}"
@model VehicleCmsCommon.Pages.Vehicles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Vin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Vin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleDetails)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Max Speed</th>
                    <th>Doors</th>
                    <th>Wheels</th>
                </tr>
                @foreach (var item in Model.Vehicle.VehicleDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxSpeed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Doors)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Wheels)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Vehicle.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
